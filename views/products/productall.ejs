<%- include("../partials/header") %>
<%- include("../partials/title") %>
All Products 
<%- include("../partials/body") %>
<div class="container">
    <div class="card m-2 p-2">
        <div class="row">
          <div class="card-columns">
            <% for(var a=0;a<product.length;a++){ %>
              <div class="card">                                    
                <h3 class="card-header"><%= product[a].name %></h3>
                  <div class="card-body">
                      <div id="carouselExampleIndicators<%= product[a]._id %>" class="carousel slide" data-ride="carousel">
                          <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators<% product[a]._id %>" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators<% product[a]._id %>" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators<% product[a]._id %>" data-slide-to="2"></li>
                          </ol>
                          <div class="carousel-inner">
                            <div class="carousel-item active">
                              <img class="d-block w-100 img-thumbnail" src="<%= product[a].imageOne %>" alt="First slide">
                            </div>
                            <div class="carousel-item">
                              <img class="d-block w-100 img-thumbnail" src="<%= product[a].imageTwo %>" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                              <img class="d-block w-100 img-thumbnail" src="<%= product[a].imageThree %>" alt="Third slide">
                            </div>
                          </div>
                          <a class="carousel-control-prev" href="#carouselExampleIndicators<%- product[a]._id %>" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                          <a class="carousel-control-next" href="#carouselExampleIndicators<%- product[a]._id %>" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>
                          <div class="card-img-overlay">
                            <div class="row">
                                <div class="col d-flex justify-content-between">
                                    <a href="/type/<%= type[0]._id %>/product/<%= product[a]._id %>" class="btn btn-sm btn-primary">Details</a>
                                    <a href="#" class="btn btn-sm btn-success">Buy</a>
                                </div>
                            </div>
                        </div>
                        </div>
                        <div class="card">
                          <div class="card-header">Price: <%= product[a].price %></div>
                          <div class="card footer">
                        <p class="text-center"><%= product[a].description %></p>
                          </div>
                        </div>
                  </div>
              </div>
            <% } %>
          </div>            
        </div>
    </div>
</div>
<%- include("../partials/footer") %>