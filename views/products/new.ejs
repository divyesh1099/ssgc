<%- include("../partials/header") %>
<%- include("../partials/title") %>
New Product
<%- include("../partials/body") %>
<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="card">
                <div class="card-header d-flex justify-content-center"><h1>NEW PRODUCT</h1></div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <div class="custom-file">                        
                                <input type="file" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Choose Image</label>
                            </div>
                        </div>                        
                        <div class="form-group">
                            <label for="nameofproduct">Name Of Product</label>
                            <input type="text" name="nameofproduct" id="nameofproduct" class="form-control">
                            <small id="nameofproductHelpLine" class="text-muted">
                                Input the name of the product
                            </small>
                        </div>
                        <div class="form-group">
                            <label for="nameofproduct">Description of product</label>
                            <textarea name="nameofproduct" id="nameofproduct" rows="10" class="form-control"></textarea>
                            <small id="nameofproductHelpLine" class="text-muted">
                                Describe product here
                            </small>
                        </div>
                        <div class="form-group">
                            <label for="nameofproduct">Price Of Product</label>
                            <input type="text" name="nameofproduct" id="nameofproduct" class="form-control">
                            <small id="nameofproductHelpLine" class="text-muted">
                                Input the price of the product
                            </small>
                        </div>
                        <div class="card-footer d-flex justify-content-center">
                            <div class="btn btn-lg btn-success">CREATE</div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-2"></div>
    </div>
</div>
<%- include("../partials/footer") %>