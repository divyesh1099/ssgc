<%- include("partials/header") %>
<%- include("partials/title") %>
Home
<%- include("partials/body") %>
<div class="container">
    <% for(var k=0;k<type.length;k++){ %>
        <div class="row">
            <div class="col-12">
                <div class="card mt-1">
                    <div class="card-header">
                        <div class="row d-flex justify-content-between">
                            <h5 class="card-title m-2"><%= type[k].name %></h5>
                            <a href="/type/<%= type[k]._id %>/edit" class="btn btn-md btn-primary ml-auto m-1"><i class="fa fa-pencil"></i></a>
                            <form action="/type/<%= type[k]._id %>?_method=DELETE" method="POST"> 
                                <button type="submit" class="btn btn-md btn-danger m-1"><i class="fa fa-minus"></i></button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- <div class="card-group"> -->
                                <% for(var l=0;l<type[k].product.length;l++){ %>
                                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                        <div class="card m-1 bg-light">
                                            <img src="<%= type[k].product[l].imageOne %>" class="card-img">
                                            <div class="card-img-overlay">
                                                <div class="row d-flex align-items-start">
                                                    <div class="col d-flex justify-content-between">
                                                        <a href="/type/<%= type[k]._id %>/product/<%= type[k].product[l]._id %>" class="btn btn-sm btn-primary">Details</a>
                                                        <a href="#" class="btn btn-sm btn-success">Buy</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-body">                               
                                                <p class="card-text"><%= type[k].product[l].description %></p>
                                            </div>
                                            <div class="card">
                                                <div class="card-footer">
                                                    <div class="row">
                                                        <h5 class="card-title m-1"><%= type[k].product[l].name %></h5> 
                                                        <a href="/type/<%= type[k]._id %>/product/<%= type[k].product[l]._id %>/edit" class="btn btn-sm btn-info ml-auto"><i class="fa fa-pencil"></i></a>
                                                        <form action="/type/<%= type[k]._id %>/product/<%= type[k].product[l]._id %>?_method=DELETE" method="POST">
                                                            <button type="submit" class="btn btn-sm btn-danger ml-1"><i class="fa fa-minus"></i></button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>                                  
                            <!-- </div> -->
                            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="row">
                                    <div class="card ml-3 bg-light">
                                        <div class="card-body">
                                            <a href="/type/<%= type[k]._id %>/product/new"><i class="fa fa-plus fa-10x m-auto p-auto"></i></a>
                                        </div>
                                        <div class="card-footer">
                                            <p>Create New Product</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <div class="row">
            <div class="card bg-light">
                <div class="card-body">
                    <a href="/type/new"><i class="fa fa-plus fa-10x m-auto p-auto"></i></a>
                </div>
                <div class="card-footer">
                    <p>Create New Type</p>
                </div> 
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer") %>