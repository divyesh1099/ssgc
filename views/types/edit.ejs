<%- include("../partials/header") %>
<%- include("../partials/title") %>
New Type
<%- include("../partials/body") %>
<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="card">
                <div class="card-header d-flex justify-content-center"><h1>EDIT <%= type.name %></h1></div>
                <div class="card-body">
                    <form action="/type/<%= type._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label for="nameoftype">Name Of Type</label>
                            <input type="text" name="type[name]" id="nameoftype" class="form-control" value="<%= type.name %>">
                            <small id="nameoftypeHelpLine" class="text-muted">
                                Input the name of the type
                            </small>
                        </div>
                        <div class="form-group">
                            <label for="descriptionoftype">Description of type</label>
                            <textarea name="type[description]" id="descriptionoftype" rows="10" class="form-control"><%= type.description %></textarea>
                            <small id="descriptionoftypeHelpLine" class="text-muted">
                                Describe Type here
                            </small>
                        </div>
                        <div class="card-footer d-flex justify-content-center">
                            <button type="submit" class="btn btn-lg btn-success">SAVE CHANGES</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-2"></div>
    </div>
</div>
<%- include("../partials/footer") %>