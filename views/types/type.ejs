<%- include("../partials/header") %>
<%- include("../partials/title") %>
<%= type.name %>
<%- include("../partials/body") %>
<div class="jumbotron">
  <h3><%= type.name %></h3>
  <p><%= type.description %></p>
</div>
<div class="container">
    <div class="card-columns">
          <% for(var b=0;b<product.length;b++){ %>
            <div class="card m-1 bg-light">
              <div id="carouselExampleIndicators<%= product[b]._id %>" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                  <li data-target="#carouselExampleIndicators<% product[b]._id %>" data-slide-to="0" class="active"></li>
                  <li data-target="#carouselExampleIndicators<% product[b]._id %>" data-slide-to="1"></li>
                  <li data-target="#carouselExampleIndicators<% product[b]._id %>" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100 img-thumbnail" src="<%= product[b].imageOne %>" alt="First slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100 img-thumbnail" src="<%= product[b].imageTwo %>" alt="Second slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100 img-thumbnail" src="<%= product[b].imageThree %>" alt="Third slide">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators<%- product[b]._id %>" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators<%- product[b]._id %>" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
              <div class="card-img-overlay">
                <div class="row">
                  <div class="col d-flex justify-content-between">
                    <a href="/type/<%= type._id %>/product/<%= product[b]._id %>" class="btn btn-sm btn-primary">Details</a>
                    <a href="#" class="btn btn-sm btn-success">Buy</a>
                  </div>
                </div>
              </div>
              <div class="card-body">                               
                <p class="card-text"><%= product[b].description %></p>
              </div>
              <div class="card-footer">
                <h5 class="card-title m-1"><%= product[b].name %></h5>
              </div>
            </div>
          <% } %>
    </div>
  </div>
<%- include("../partials/footer") %>